{
	"exclude": [
		"build"
	],
	"include": [
		"src"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"rootDir": "src",
		"outDir": "build",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["*"]
		}
	},
}